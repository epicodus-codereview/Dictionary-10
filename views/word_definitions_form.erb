<h1>Add a definition to <%= @word.name() %> </h1>

<form action="/definitions" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>

  <label for='part_of_speech'>Word's Part of Speech:</label>
  <input id='part_of_speech' name='part_of_speech' type='text'>

  <label for='describe'>Word's Description:</label>
  <input id='describe' name='describe' type='text'>

  <button type="submit">Add Definition</button>
</form>
